{
  "name": "example-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "rm -rf packages/*/dist",
    "check-cycles:src": "cdd ./packages --exclude dist --exclude node_modules",
    "check-cycles:dist": "cdd ./packages --exclude src --exclude node_modules",
    "check-cycles:runtime": "cdd ./packages --exclude src --exclude node_modules --ignore-type-imports"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0"
  }
}
